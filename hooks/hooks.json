    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooky.sh SessionEnd",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
