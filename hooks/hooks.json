{
    "description": "Hooky - iOS Live Activity notifications for Claude Code",
    "hooks": {
        "SessionStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh SessionStart",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh PreToolUse",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh PostToolUse",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "PostToolUseFailure": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh PostToolUseFailure",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh Stop",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "Notification": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh Notification",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "SubagentStart": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh SubagentStart",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "SubagentStop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh SubagentStop",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "PreCompact": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh PreCompact",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ],
        "SessionEnd": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "${CLAUDE_PLUGIN_ROOT}/scripts/liveactivities.sh SessionEnd",
                        "async": true,
                        "timeout": 20
                    }
                ]
            }
        ]
    }
}
